<div class="carousel-item">
  <%= link_to project_task_path(@project,task), class: "link" do %>
    <% if task.task_image? %>
      <%= image_tag task.task_image.variant(resize_to_fill: [200, 200]) %>
    <% else %>
      <%= image_tag "sample_project.png", size: '200x200' %>
    <% end %>
  <% end %>
</div>