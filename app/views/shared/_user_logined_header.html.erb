<div class="navbar bg-base-100 container mx-auto border-b">
  <div class= "navbar-start">
    <%= link_to "Modelers Log", root_path, class: "btn btn-ghost normal-case text-2xl xl:text-4xl" %>
  </div>
  <div class= "navbar-center ">
  </div>
  <div class= "navbar-end">
    <%#--profile dropdown start--%>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <% if current_user.owner_avatar.present? %>
          <%=cl_image_tag "daichi-test/animal-test/#{current_user.owner_avatar.key}",
          gravity: "face", height: 150, width: 150, crop: "thumb", radius: 'max', fetch_format: :auto  %>
        <% else %>
          <div class="w-10 rounded-full">
            <%= image_tag 'sample_avatar.png', size: '150x150', class: 'rounded-full' %>
          </div>
        <% end %>
      </label>
      <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
        <div class="m-auto"><%= tag.p "hello #{current_user.owner_name}" %></div>
        <div class="divider"></div>
        <li> <%= link_to t('Your workspace'), workspace_path(current_user) %> </li>
        <li><%= link_to t('your profile'), workspace_profile_path(current_user) %></li>
        <li><%= link_to t('your followings'), followings_path(current_user) %></li>
        <li><%= link_to t('workspaces.favorites.index.title'), favorites_path(current_user)%></li>
        <div class="divider"></div>
        <li><%= link_to t('edit workspace'), edit_workspace_path(current_user), class: "justify-between" %></li>
        <li><a>Settings(工事中)</a></li>
        <div class="divider"></div>
        <li><%=button_to t('.logout'), logout_path, method: :delete, data: { turbo: false } %><li>
      </ul>
    </div>
    <%#--profile dropdown end--%>
  </div>
</div>
<div class="navbar bg-base-100 container mx-auto border-b">
  <div class="navbar-start">
    <label for="my-drawer" class="btn btn-circle swap swap-rotate">
      <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"/></svg>
    </label>
  </div>
  <div class="navbar-center ">
  </div>
  <div class="navbar-end">
    <%= link_to t('.my_project'), workspace_path(current_user), class: "btn btn-primary btn-outline btn-sm mr-3"%>
    <div class="tooltip h-8" data-tip="add project">
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-outline">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-11 w-11" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
          </svg>
        </label>
        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
          <div class='divider'>new project</div>
          <li><%= link_to '+ basic-type', new_project_path, data: { turbo_method: :get, turbo_confirm: 'Add project with no-template-project'} %></li>
          <div class='divider'>use template</div>
          <li><%= link_to '+ human-type ', new_project_path, data: { turbo_method: :get, turbo_confirm: 'Add project using a robot-type template'} %></li>
          <li><%= link_to '+ vehicle-type ', new_project_path, data: { turbo_method: :get, turbo_confirm: 'Add project using a vehicle-type template'} %></li>
          <li><%= link_to '+ figure-type ', new_project_path, data: { turbo_method: :get, turbo_confirm: 'Add project using a human-type template'} %></li>
        </ul>
      </div>
    </div>
  </div>
</div>