<div class="navbar bg-base-100 container mx-auto border-b">
  <div class= "navbar-start">
    <%= link_to "Modelers Log", root_path, class: "btn btn-ghost normal-case text-2xl xl:text-4xl" %>
  </div>
  <div class= "navbar-center ">
  </div>
  <div class= "navbar-end">
    <%#--profile dropdown start--%>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <% if current_user.owner_avatar.present? %>
          <%=cl_image_tag "daichi-test/animal-test/#{current_user.owner_avatar.key}",
          gravity: "face", height: 150, width: 150, crop: "thumb", radius: 'max', fetch_format: :auto  %>
        <% else %>
          <div class="w-10 rounded-full">
            <img src="https://placeimg.com/80/80/people" />
          </div>
        <% end %>
      </label>
      <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
        <li> <%= link_to t('My workspace'), workspace_path(current_user) %> </li>
        <li><%= link_to t('.See my profile'), workspace_profile_path(current_user) %></li>
        <li><%= link_to t('.See my toolset'), workspace_profile_path(current_user) %></li>
        <li><%= link_to t('.change my ID,s'), edit_workspace_path(current_user), class: "justify-between" %></li>
        <li><a>Settings</a></li>
        <li><%=button_to t('.logout'), logout_path, method: :delete, data: { turbo: false } %><li>
      </ul>
    </div>
    <%#--profile dropdown end--%>
  </div>
</div>
<div class="navbar bg-base-100 container mx-auto border-b">
  <div class="navbar-start">
    <label for="my-drawer" class="btn btn-circle swap swap-rotate">
      <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"/></svg>
    </label>
  </div>
  <div class="navbar-center ">
  </div>
  <div class="navbar-end">
    <%= link_to t('.my_project'), workspace_path(current_user), class: "btn btn-primary btn-outline btn-sm mr-3"%>
    <div class="tooltip h-8" data-tip="add project">
      <%= link_to new_project_path, data: { turbo_method: :get, turbo_confirm: 'add new project?'} ,class: 'btn btn-ghost btn-outline btn-sm' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-11 w-11" fill="none" viewBox="0 4 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
        </svg>
      <% end %>
    </div>
  </div>
</div>