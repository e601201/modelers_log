<footer class="footer p-10 bg-base-200 grid grid-cols-2 lg:grid-cols-5 text-base-content ">
  <div>
    <%= tag.span Project.model_name.human, class: 'footer-title font-bold' %>
    <%= link_to t('projects.index.title'), projects_path, class: 'link link-hover' %>
  </div> 
  <div>
    <%= tag.span Workspace.model_name.human, class: 'footer-title font-bold' %>
    <%= link_to t('workspaces.index.title'), workspaces_path, class: 'link link-hover' %>
  </div> 
  <% if logged_in? %>
    <div>
      <%= tag.span t('defaults.user.page'), class: 'footer-title font-bold' %>
      <%= link_to t('defaults.user.workspace'), workspace_path(current_user.id),
          class: 'link link-hover' %>
      <%= link_to t('defaults.user.profile'), workspace_profile_path(current_user.id),
          class: 'link link-hover' %>
    </div>
  <% else %>
    <div>
      <%= tag.span t('defaults.user.guest'), class: 'footer-title font-bold' %>
      <%= link_to t('workspaces.new.title'), new_workspace_path, class: 'link link-hover' %>
      <%= link_to t('defaults.login'), login_path, class: 'link link-hover' %>
    </div>
  <% end %>
  <div>
    <%= tag.span t('defaults.customer_support'), class: 'footer-title font-bold' %> 
    <%= link_to t('defaults.help'), page_path('faq'),
        target: '_blank', rel: 'noopener noreferrer', class: 'link link-hover' %>
    <%= link_to t('defaults.question_box'), 'https://forms.gle/vZUzWfCv124BkPe28',
        target: '_blank', rel: 'noopener noreferrer', class: 'link link-hover' %>
  </div>
  <div>
    <%= tag.span t('defaults.legal_matters'), class: 'footer-title font-bold' %> 
    <%= link_to t('defaults.terms_of_use'), 'https://kiyac.app/termsOfService/Tew7wOh7gIlrq7amz8mo',
        target: '_blank', rel: 'noopener noreferrer', class: 'link link_hover'%>
    <%= link_to t('defaults.privacy_policy'), 'https://kiyac.app/privacypolicy/ZhCcmPYBlfSBRDPPZoi7',
        target: '_blank', rel: 'noopener noreferrer', class: 'link link-hover' %>
  </div>
</footer> 
