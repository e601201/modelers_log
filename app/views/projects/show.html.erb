<!--プロジェクトの中身-->
<div class="flex flex-col md:flex-row mx-10">
  <div class="container mx-auto w-full md:w-1/5 ">
    <div class="text-3xl my-5 md:text-5xl"><%= @project.title.truncate(20) %></div>
    <div>
      <%= render @project %>
    </div>
      <div>
        <% if current_user&.own_project?(@project) %>
          <div class="flex gap-4 my-5">
            <%= link_to edit_project_path(@project), class: "btn btn-info" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            <% end %>
            <%= button_to project_path(@project), method: :delete, form: { data: { turbo_confirm: "Destroy this project !! Are you sure?" } }, class: "btn btn-warning"  do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
            <%= button_to project_duplications_path(@project),method: :post, form: { data: { turbo_confirm: "Dupricate and make new project!! Are you sure? " } }, class: "btn btn-accent"  do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
              </svg>
            <% end %>
          </div>
        <% else %>
          <div class="flex gap-4 my-5">
            <%= link_to workspace_path(@project.workspace_id), class: "btn btn-info" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z" />
              </svg>
            <% end %>
          </div>
        <% end %>
        <div class= "my-5">
          <%= link_to 'back to home', root_path, class: "btn btn-primary" %>
        </div>
      </div>
  </div>

  <div class="mx-auto md:w-3/5 w-full pt-5">
    <!--カルーセルスタート-->
    <div class="carousel rounded-box">
      <%= render partial: 'tasks/task_image', collection: @tasks.image_attached_tasks, as: 'task' %>
    </div>
    <!--カルーセルエンド-->
    <div class="flex flex-col w-full lg:flex-row mt-5">
      <div class="flex flex-col flex-grow card rounded-box place-items-center border-gray-800 rounded-2xl border">
        <label class= "badge"> 未完了タスク </label>
        <div class="main-content container mx-auto px-8">
          <% if @tasks.in_progress.present? %>
            <%= render partial: 'projects/card_task', collection: @tasks.in_progress, as: 'task' %>
          <% else %>
            <div class='flex'>
              <p>Yay!! You have no task!! <br> finish it yet?</p>
            </div>
          <% end %>
          <% if current_user&.own_project?(@project) %>
            <div class= "flex">
              <%= link_to '+ add task', new_project_task_path(@project), class: "btn btn-primary my-2 w-5/12" %>
              <div class="my-2 w-2/12 flex justify-center">
                <p class="text-4xl" >or</p>
              </div>
              <%= link_to 'finish project', new_project_task_path(@project), data: { turbo_method: :get , turbo_confirm: 'finish this project !! Are you sure?'}, class: "btn btn-secondary my-2 w-5/12" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="divider lg:divider-horizontal"> </div>
      <div class="flex flex-col flex-grow card rounded-box place-items-center border-gray-800 rounded-2xl border">
        <label class= "badge" > 完了タスク </label>
        <div class="main-content container mx-auto px-8">
          <% if @tasks.present? %>
            <%= render partial: "projects/card_task", collection: @tasks.done, as: 'task' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>