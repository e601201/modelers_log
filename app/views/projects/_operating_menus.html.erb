<%= link_to edit_project_path(project), class: "btn btn-info" do %>
  <%= render 'shared/crud_svg', {object: 'note', size: 'h-6 w-6'} %>
<% end %>
<%= link_to project_path(project), data: { turbo_method: :delete, turbo_confirm: t('defaults.message.delete_confirm', item: Project.model_name.human) }, class: "btn btn-warning"  do %>
  <%= render 'shared/crud_svg', {object: 'dustbin', size: 'h-6 w-6'} %>
<% end %>
<%= link_to project_duplications_path(project), data: { turbo_method: :post, turbo_confirm: t('defaults.message.duplicate_confirm', item: Project.model_name.human) }, class: "btn btn-accent"  do %>
  <%= render 'shared/crud_svg', {object: 'duplicate', size: 'h-6 w-6'} %>
<% end %>