<%= form_with(model: project, class: "contents") do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <% if project.project_image.present? %>
    <%= image_tag project.project_image.variant(resize_to_limit: [100, 100])%>
  <% end %>
  <div class="my-5">
    <%= form.label :project_image %>
    <p>(JPEG・jpgもしくはPNG)</p>
    <%= form.file_field :project_image, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <% if action_name == "edit" %>
    <div class="my-5">
      <%= form.label :state %>
      <%= form.select :state, Project.states.keys, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  <% end %>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
