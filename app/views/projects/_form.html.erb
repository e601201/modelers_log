<%= form_with(model: project, class: 'contents') do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  <div class= 'flex my-5'>
    <div>
      <% if project.project_image.representable? %>
        <%= image_tag project.project_image.representation(resize_to_limit: [200, 200])%>
      <% end %>
    </div>
    <div class='ml-5'>
      <div>
        <%= tag.span '*', class: 'text-xl text-red-500' %>
        <%= tag.span t('.message.required') %>
      </div>
      <div class='my-5'>
        <%= form.label :title, class: 'font-mono' %><span class= 'text-xl text-red-500' > * </span>
        <%= form.text_field :title, required: true, class: 'input input-bordered px-3 py-2 mt-2 w-5/6', placeholder: t('.placeholder.body')  %>
      </div>

      <div class='my-5'>
        <%= form.label :body, class: 'label font-mono' %>
        <label class='label py-0'>
          <%= tag.span t('.message.body'), class: 'label-text-alt text-xs text-slate-400'%>
        </label>
        <%= form.text_area :body, class: 'textarea textarea-bordered px-3 py-2 mt-2 w-5/6 h-40', placeholder: project.decorate.form_body %>
      </div>

      <div class='my-5'>
        <%= form.label :project_category, class: 'label font-mono' %>
        <%= form.select :project_category, Project.project_categories_i18n.invert,{},
          class: 'select select-bordered px-3 py-2 mt-2 w-5/6'
        %>
      </div>
      <div class='my-5'>
        <%= form.label :project_image, class: 'label font-mono' %>
        <label class='label py-0'>
          <%= tag.span t('.message.image'), class: 'label-text-alt text-xs text-slate-400'%>
        </label>
        <%= form.file_field :project_image, class: 'input input-bordered px-3 py-2 mt-2 w-5/6', accept: '.png, .jpg, .jpeg' %>
      </div>
      <div class='inline'>
        <%= form.submit class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
        <%= link_to t('defaults.back'), :back, class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
      </div>
    </div>
  </div>
<% end %>
