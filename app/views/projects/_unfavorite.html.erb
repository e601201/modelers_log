<%= turbo_frame_tag dom_id(project, :favorite) do %>
  <%= button_to project_favorite_path(project_id: project, id: project.favorites.find_by(workspace_id: current_user&.id)), method: :delete, class: 'hover:scale-150 hover:-translate-y-2' do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-400" viewBox="0 0 20 20" fill="currentColor">
      <%= tag.path 'stroke-linecap':'round', 'stroke-linejoin':'round', d:emmbed_svg('unfavorite')['path']%>
    </svg>
  <% end %>
<% end %>
