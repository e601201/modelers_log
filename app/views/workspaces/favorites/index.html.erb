<%= content_for(:title, @workspace.owner_name + ' | ' + t('workspaces.favorites.index.title')) %>
<%= render 'shared/main_tab', {object: @workspace}%>
<div class='container px-5 flex flex-col md:flex-row md:mx-auto'>
  <%= render 'workspaces/profiles/form', profile: @workspace %>
  <div class='border rounded-lg m-3 p-2 md:w-full'>
    <div id='workspace-followers' class='grid grid-cols-2 lg:grid-cols-4 gap-4'>
      <%= render partial: 'projects/project', collection: @workspace.favorite_projects, as: 'project' %>
    </div>
  </div>
</div>