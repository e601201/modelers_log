<%= render 'shared/main_tab', {object: @workspace}%>
<!--ワークスペースの中身-->
<div class="flex flex-col md:flex-row mx-10">
  <div class="container mx-auto w-full md:w-1/5 ">
    <div class="text-3xl my-5 md:text-4xl"><%= @workspace.owner_name %>のworkspace
    </div>
    <div>
      <%= render @workspace %>
    </div>
    <div class='flex'>
      <% if current_user == @workspace %>
        <%= link_to edit_workspace_path(@workspace), class: "btn btn-primary mr-3" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end %>
      <% else %>
        <%= link_to workspace_profile_path(@workspace), class: "btn btn-info" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        <% end %>
      <% end %>
      <%= link_to t('defaults.back'), :back, class: "btn btn-primary ml-3" %>
      <%= link_to t('defaults.home'), root_path, class: "btn btn-primary ml-3" %>
    </div>
    </div>
    <div class="mx-auto md:w-3/5 w-full flex">
      <div>
        <div class="text-3xl my-5 md:text-4xl"><%= @workspace.owner_name %>のprojects
        </div>
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 ">
          <%= render partial: "projects/project", collection: @projects, as: 'project' %>
        </div>
      </div>
  </div>
</div>