<%= form_with(model: tool, url: url, class: "contents") do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class='my-5'>
        <%= form.label :tool_category, class: 'label font-mono' %>
        <%= form.select :tool_category, Tool.tool_categories_i18n.invert,{},
          class: 'select select-bordered px-3 py-2 mt-2 w-5/6'
        %>
      </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>